<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="18dp"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_regular_2"
                android:fontFamily="@font/poppins_medium"
                android:textStyle="bold"
                android:paddingStart="@dimen/margin_large_xxx"
                android:paddingEnd="@dimen/margin_large_xxx"
                android:background="@drawable/grey_background"
                android:textColor="@color/white"
                android:text="@string/prescription_label"
                android:padding="8dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/prescription_rcy"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/browser_actions_divider_color"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="ကျသင့်ငွေ"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_margin="10dp"
                    android:textColor="@color/title_text_color"
                    android:textSize="@dimen/text_regular_2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="0 Kyats"
                    android:textColor="@color/title_text_color"
                    android:textSize="@dimen/text_regular_2"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:id="@+id/subtotal"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ပို့ ဆောင်ခ"
                    android:layout_margin="10dp"
                    android:textColor="@color/title_text_color"
                    android:textSize="@dimen/text_regular_2"
                    android:fontFamily="@font/poppins_medium"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="အခမဲ့"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/title_text_color"
                    android:textSize="@dimen/text_regular_2"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_margin="10dp"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/browser_actions_divider_color"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="စုစုပေါင်းကျသင့်ငွေ"
                    android:layout_margin="10dp"
                    android:textColor="@color/title_text_color"
                    android:textSize="@dimen/text_regular_2"
                    android:fontFamily="@font/poppins_medium"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 Kyats"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/title_text_color"
                    android:textSize="@dimen/text_regular_2"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_margin="10dp"
                    android:id="@+id/total_amounts"
                    />
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="18dp"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_regular_2"
                android:paddingStart="@dimen/margin_large_xxx"
                android:paddingEnd="@dimen/margin_large_xxx"
                android:fontFamily="@font/poppins_bold"
                android:background="@drawable/grey_background"
                android:textColor="@color/white"
                android:text="@string/address"
                android:padding="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="blah blah blah"
                android:layout_margin="10dp"
                android:textColor="@color/title_text_color"
                android:fontFamily="@font/poppins_medium"
                android:id="@+id/fulladdress"
                android:textSize="@dimen/text_regular_2"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="18dp"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_regular_2"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/title_text_color"
                android:text="@string/checkout"
                android:padding="8dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="200dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:textSize="@dimen/text_regular_2"
                android:fontFamily="@font/poppins_bold"
                android:paddingBottom="5dp"
                android:textColor="@color/white"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center"
                android:backgroundTint="@color/blue"
                android:id="@+id/btn_payment"
                android:text="ငွေပေးချေမည်"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/myLabel"
                        android:layout_marginBottom="60dp"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/prescription_info_item_view"
                        android:id="@+id/rc_medicinelist"/>

                <RelativeLayout
                    android:id="@+id/emptyView"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_below="@id/myLabel"
                    android:layout_marginTop="@dimen/margin_medium_2"
                    android:visibility="gone"
                    >
                    <ImageView
                        android:id="@+id/myImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:src="@drawable/group_839"
                        android:layout_centerVertical="true"/>
                <org.mmtextview.components.MMTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/myImage"
                    android:text="@string/no_medicine"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_medium_2"
                    android:fontFamily="@font/poppins_bold"

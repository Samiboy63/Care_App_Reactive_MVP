<?xml version="1.0" encoding="utf-8"?>
<com.aungpyaesone.patient.views.view_pods.PrescriptionViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="left"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="60dp"
    android:gravity="left"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.aungpyaesone.patient.views.components.RoundedCornerImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp"
            app:cornerRadius="@dimen/margin_large_xxxx"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_gravity="bottom"
            android:src="@drawable/group_839"
            android:id="@+id/pdoctor_photo"/>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            android:padding="5dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="2dp"
            app:cardCornerRadius="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_input_background"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="5dp"
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medicine Recommendiation"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/title_text_color"
                    android:textSize="@dimen/text_regular_2"
                    android:textStyle="bold"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@android:color/darker_gray"/>
                <TextView
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medicine Name"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/title_text_color"
                    android:textSize="@dimen/text_regular_2"
                    android:id="@+id/txt_medicineList"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_prescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/text_regular_2"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/poppins_medium"
        android:paddingLeft="3dp"
        android:paddingTop="3dp"
        android:paddingRight="3dp"
        android:paddingBottom="3dp"
        android:text="@string/prescribe_medicine_label"
        android:textColor="@color/white" />

</com.aungpyaesone.patient.views.view_pods.PrescriptionViewPod>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/white"
        app:cardElevation="2dp"
        app:cardCornerRadius="1dp"
        android:id="@+id/new_addresscard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/shipping_cancel"
                android:layout_gravity="right"
                android:layout_margin="8dp"
                android:src="@drawable/android_cancel"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_margin="4dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_regular"
                        android:textStyle="bold"
                        android:gravity="bottom"
                        android:paddingBottom="6dp"
                        android:text="@string/state"
                        android:textColor="@color/title_text_color"/>
                    <androidx.cardview.widget.CardView
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        app:cardElevation="3dp"
                        android:layout_margin="6dp"
                        app:cardCornerRadius="5dp"
                        app:cardBackgroundColor="@color/white">
                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:padding="5dp"
                            android:spinnerMode="dialog"
                            android:entries="@array/state"
                            android:id="@+id/state_spinner"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_regular_2"
                        android:fontFamily="@font/poppins_bold"
                        android:text="@string/township"
                        android:textColor="@color/title_text_color"/>
                    <androidx.cardview.widget.CardView
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        app:cardElevation="3dp"
                        android:layout_margin="6dp"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="@color/white">
                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:padding="5dp"
                            android:spinnerMode="dialog"
                            android:entries="@array/yangon"
                            android:id="@+id/township_spinner"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
            <org.mmtextview.components.MMTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="@string/full_address_label"
                android:textSize="@dimen/text_regular_2"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginTop="3dp"
                android:textColor="@color/title_text_color"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_background_two"
                android:hint="@string/address_label"
                android:padding="10dp"
                android:maxLines="3"
                android:lines="3"
                android:inputType="textMultiLine"
                android:scrollbars="vertical"
                android:textSize="13sp"
                android:maxLength="2000"
                android:gravity="left"
                android:textColor="@color/black"
                android:id="@+id/ed_address"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="18dp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="200dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/white"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center"
                android:backgroundTint="@color/blue"
                android:id="@+id/btn_add"
                android:text="@string/add_btn_label"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Firebase_monthly_tuto" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/color_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TitleTextStyle">
        <item name="android:textSize">@dimen/text_regular_3</item>
        <item name="android:layout_margin">@dimen/margin_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/title_text_color</item>
    </style>

    <style name="subTitleStyle">
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/title_text_color</item>
    </style>

    <style name="RegularStyleTwo">
        <item name="android:textSize">@dimen/text_regular_3x</item>
        <item name="android:layout_margin">@dimen/margin_medium</item>
    </style>

    <style name="RegularStyle">
        <item name="android:textSize">@dimen/text_regular_2</item>
        <item name="android:layout_margin">@dimen/margin_medium_2</item>
        <item name="android:textColor">@color/title_text_color</item>
    </style>

    <style name="dialogTextStyle">
        <item name="android:textSize">@dimen/text_regular_2</item>
        <item name="android:textColor">@color/common_text_color</item>
    </style>
    <style name="NegativeButtonStyle"  parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/blue_A200</item>
    </style>

    <style name="pickerStyle">
        <item name="android:layout_margin">@dimen/margin_medium_2</item>
        <item name="android:elevation">@dimen/margin_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/margin_medium</item>
        <item name="android:textColor">@color/text_color</item>
    </style>


    <style name="editTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@drawable/drawable_background_white</item>
        <item name="android:layout_margin">@dimen/margin_medium_2</item>
        <item name="android:padding">@dimen/margin_medium_2</item>
        <item name="android:elevation">@dimen/margin_small</item>
    </style>

    <style name="spinnerStyle" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:background">@drawable/drawable_background_white</item>
        <item name="android:layout_margin">@dimen/margin_medium_2</item>
        <item name="android:padding">@dimen/margin_medium_2</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="profileTextStyle">
        <item name="android:textSize">@dimen/text_regular_2</item>
        <item name="android:layout_marginStart">@dimen/margin_medium_2</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
    </style>

</resources>
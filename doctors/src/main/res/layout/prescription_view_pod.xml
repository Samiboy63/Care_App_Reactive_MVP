<?xml version="1.0" encoding="utf-8"?>
<com.aungpyaesone.doctors.views.view_pod.PrescriptionViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="end"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="60dp"
    android:gravity="start"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_gravity="bottom"
        android:gravity="bottom|end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            android:padding="5dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/blue_transparent"
            app:cardElevation="2dp"
            app:cardCornerRadius="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="5dp"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medicine Recommendiation"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/title_text_color"
                    android:textSize="@dimen/text_regular_2"
                    android:textStyle="bold"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_primary"/>
                <TextView
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="5dp"
                    android:padding="2dp"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/title_text_color"
                    android:textSize="@dimen/text_regular_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medicine Name"
                    android:id="@+id/txt_medicineList"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <com.aungpyaesone.doctors.views.component.RoundedCornerImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_small"
            app:cornerRadius="@dimen/margin_large_xxxx"
            android:src="@drawable/group_909"
            android:id="@+id/pdoctor_photo"/>
    </LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="@dimen/margin_medium_2"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:paddingBottom="@dimen/margin_medium_2"
        android:layout_marginBottom="57dp"
        >

    <androidx.core.widget.NestedScrollView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        android:layout_marginBottom="50dp"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            app:cardElevation="5dp"
            android:layout_margin="3dp"
            app:cardCornerRadius="20dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto">
            <LinearLayout
                android:id="@+id/prescriptionLayout"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:background="@drawable/green_background"
                    android:textColor="@color/white"
                    android:text="@string/prescription_label"
                    android:scrollbarSize="@dimen/text_regular_2"
                    android:fontFamily="@font/poppins_bold"
                    android:paddingStart="@dimen/margin_large"
                    android:paddingTop="@dimen/margin_small"
                    android:paddingBottom="@dimen/margin_small"
                    android:paddingEnd="@dimen/margin_large"
                    />

                <LinearLayout
                    android:layout_marginTop="@dimen/margin_medium_2"
                    android:layout_marginLeft="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2.4">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/prescripton_text_color"
                        android:textSize="@dimen/text_regular"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/name_of_patient_label"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.4"
                        tools:text = "name"
                        android:fontFamily="@font/poppins_medium"
                        android:id="@+id/pname"
                        android:textSize="@dimen/text_regular"
                        android:textColor="@color/prescripton_text_color"
                        android:padding="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2.4">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/prescripton_text_color"
                        android:textSize="@dimen/text_regular"
                        android:text="@string/consulted_dated"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.4"
                        android:text=""
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/prescripton_text_color"
                        android:textSize="@dimen/text_regular"
                        android:id="@+id/pstartdate"
                        android:padding="5dp"/>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="60dp"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/prescription_info_item_view"
                    android:id="@+id/rc_medicinelist"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </androidx.core.widget.NestedScrollView>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="32dp"
            android:textColor="@color/white"
            app:cornerRadius="@dimen/corner_radius_for_button"
            android:layout_height="@dimen/button_height"
            android:fontFamily="@font/poppins_bold"
            android:layout_gravity="center"
            android:backgroundTint="@color/color_primary"
            android:id="@+id/btn_close"
            android:text="@string/close_btn_label"/>


    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
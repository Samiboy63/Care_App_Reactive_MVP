<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        android:layout_width="356dp"
        android:layout_height="577dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/button_height"
                android:src="@drawable/postpone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/text_regular_3"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:text="@string/disscut_time"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#424656"/>

            <TimePicker
                android:id="@+id/timePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:timePickerMode="spinner"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/white"
                android:layout_height="@dimen/button_height"
                app:cornerRadius="@dimen/corner_radius_for_button"
                android:textSize="@dimen/text_regular_3"
                android:fontFamily="@font/poppins_bold"
                android:layout_gravity="center"
                android:backgroundTint="#005ccc"
                android:id="@+id/confirm"
                android:layout_marginBottom="15dp"
                android:text="@string/choose_time_label"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>